package anylayout.extras;

import anylayout.LayoutContext;
import fpeas.function.Function;

import java.awt.Component;

public class LayoutContextUtility
{
	public static final Function<LayoutContext, Integer> getParentSize=new Function<LayoutContext,Integer>()
	{
		public Integer run(final LayoutContext layoutContext)
		{
			return layoutContext.getParentSize();
		}
	};
	
	public static final Function<LayoutContext, Integer> getPreferredSize=new Function<LayoutContext,Integer>()
	{
		public Integer run(final LayoutContext layoutContext)
		{
			return layoutContext.getPreferredSize();
		}
	};

	public static Function<LayoutContext,Integer> getFarOffset(final Component component)
	{
		return new Function<LayoutContext,Integer>()
		{
			public Integer run(final LayoutContext context)
			{
				return context.getLayoutInfo(component).getFarOffset();
			}
		};
	}
}